{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "permissions": {
    "allow": [],
    "deny": []
  },
  "hooks": {
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "terminal-notifier -message \"Claude code has stopped.\" -title \"Status Alert\""
          }
        ]
      }
    ],
    "Notification": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "terminal-notifier -message \"Claude code needs your attention.\" -title \"Status Alert\""
          }
        ]
      }
    ],
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "/Users/roger/.claude/hooks/skill-activation-forced-eval.sh"
          }
        ]
      }
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "bash ~/.claude/statusline.sh"
  },
  "enabledPlugins": {
    "edmunds-claude-code@edmunds-claude-code": true,
    "test-plugin@my-claude-code-workflows": true,
    "typescript-lsp@claude-plugins-official": true,
    "ralph-wiggum@claude-plugins-official": true,
    "ralph-loop@claude-plugins-official": true,
    "everything-claude-code@everything-claude-code": true,
    "code-simplifier@claude-plugins-official": true,
    "security-guidance@claude-plugins-official": true,
    "Notion@claude-plugins-official": true,
    "linear@claude-plugins-official": true,
    "sentry@claude-plugins-official": true,
    "claude-md-management@claude-plugins-official": true,
    "claude-code-setup@claude-plugins-official": true,
    "figma@claude-plugins-official": true
  }
}
